.videoDialogCover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 10000;
}

.videoDialog {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 600rpx;
  padding-top: 50rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 10001;
  overflow: hidden;
}

.videoDialog .content {
  margin: 0 40rpx;
  margin-top: 20rpx;
  /* color: #666666; */
  font-size: 36rpx;
}

.videoDialog .button {
  display: inline-flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  padding: 0 90rpx;
  color: #fff;
  font-size: 34rpx;
  border-radius: 60rpx;
  /* background-color: #e97556; */
  z-index: 10001;
}

.button image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
  display: block;
}

.videoDialog ad {
  max-width: 650rpx;
}
  
.videoDialog video {
  max-width: 650rpx;
}