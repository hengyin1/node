<view>
	<view class="item">
		<view class="box1 border">
			<input class="input" placeholder="这里输入文字" value="{{value}}" bindblur="blur" bindfocus="focus" bindinput="changeVal"></input>
		</view>
		<view class="box2 border" bindtap="toggle">
			<image class="icon" mode="aspectFit" src="./static/5.png"></image>
		</view>
		<view wx:if="{{index==0}}" class="box2 border" bindtap="addtex">
			<image class="icon" mode="aspectFit" src="./static/4.png"></image>
		</view>
		<view wx:else class="box2 border" bindtap="del">
			<image class="icon" mode="aspectFit" src="./static/3.png"></image>
		</view>
	</view>
</view>
