/* pages/addtext/addtext.wxss */
page {
  background-color: #f2f2f2;
}

.text {
  position: absolute;
  transform: translate(-50%, -50%);
  line-height: 1.6;
  max-width: 100%;
  padding: 0 5px;
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
}

.text-active {
  border: 1px solid #d81e06;
}

.input-box {
  margin-top: 40rpx;
}

.buttons {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 30rpx 0;
  background-color: #ffffff;
  z-index: 10000;
}

.bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: 10005;
}

.set-box {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 150rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #ffffff;
  box-sizing: 1px 1px 3px 2px #333333;
}

.set-title {
  margin: 30rpx 20rpx 10rpx;
  color: #999999;
  font-size: 30rpx;
}