/**index.wxss**/
.pic-box {
  height: 200px;
  padding-bottom: 20rpx;
  background-color: #f2f2f2;
}

.face-box {
  position: absolute;
  transform: translate(-50%, -50%);
  border: 1px solid #e1473c;
  z-index: 0;
}

.cancel-icon{
  position: absolute;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  transform: translate(50%, -50%);
}

.up-tab {
  margin: 10rpx auto;
}

.up-tab-item {
  flex: 1;
  line-height: 1.6;
  font-size: 32rpx;
  text-align: center;
}

.up-tab-item-active {
  display: inline-block;
  color: #07c160;
  border-bottom: 2px solid #07c160;
  box-sizing: border-box;
}

.down-tab {
  width: 715rpx;
  margin: 0 auto;
  padding: 15rpx 0;
  font-size: 28rpx;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  box-sizing: border-box;
}

.down-tab-item {
  position: relative;
  width: 130rpx;
  text-align: center;
}

.down-tab-item-active {
  height: 56rpx;
  line-height: 56rpx;
  color: #ffffff;
  border-radius: 6rpx;
  background-color: #07c160;
}

.new-icon {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #e1473c;
}

.lists-box {
  height: calc(100vh - 317.2rpx - 200px);
  background-color: #f2f2f2;
}

.lists {
  margin: 0 20rpx;
  margin-top: 10rpx;
}

.list-item {
  width: 122rpx;
  height: 122rpx;
  margin: 10rpx;
  overflow: hidden;
}

.list-item-image {
  display: block;
  width: 100%;
  height: 100%;
}

.face-image {
  transform: scale(1.2);
}

.camera-box {
  height: 100%;
}

.camera-icon-box {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 30rpx;
  border: 1px dashed #2c2c2c;
  border-radius: 10rpx;
}

.camera-icon {
  display: block;
  width: 61rpx;
  height: 48rpx;
  margin: 31rpx auto;
}