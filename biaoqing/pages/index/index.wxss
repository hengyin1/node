/**index.wxss**/
.canvas {
  width: 710rpx;
  height: 600rpx;
  margin: 20rpx;
  background-color: #f2f2f2;
}

.up-tab {
  margin-bottom: 10rpx;
}

.up-tab-item {
  flex: 1;
  line-height: 1.6;
  font-size: 32rpx;
  text-align: center;
}

.up-tab-item-active {
  display: inline-block;
  color: #07c160;
  border-bottom: 2px solid #07c160;
  box-sizing: border-box;
}

.down-tab {
  width: 715rpx;
  margin: 0 auto;
  padding: 15rpx 0;
  font-size: 28rpx;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  box-sizing: border-box;
}

.down-tab-item {
  width: 130rpx;
  text-align: center;
}

.down-tab-item-active {
  height: 56rpx;
  line-height: 56rpx;
  color: #ffffff;
  border-radius: 6rpx;
  background-color: #07c160;
}

.lists-box {
  height: calc(100vh - 787.2rpx);
}

.lists {
  margin: 0 20rpx;
  margin-top: 10rpx;
}

.list-item-image {
  display: block;
  width: 122rpx;
  height: 122rpx;
  margin: 10rpx;
}

.to-bottom {
  padding: 30rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}