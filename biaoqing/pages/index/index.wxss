/**index.wxss**/
.pic-box {
  height: 200px;
  padding-bottom: 20rpx;
  background-color: #f2f2f2;
}

.face-box {
  position: absolute;
  transform: translate(-50%, -50%);
}

.up-tab {
  margin: 10rpx auto;
}

.up-tab-item {
  flex: 1;
  line-height: 1.6;
  font-size: 32rpx;
  text-align: center;
}

.up-tab-item-active {
  display: inline-block;
  color: #07c160;
  border-bottom: 2px solid #07c160;
  box-sizing: border-box;
}

.down-tab {
  width: 715rpx;
  margin: 0 auto;
  padding: 15rpx 0;
  font-size: 28rpx;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  box-sizing: border-box;
}

.down-tab-item {
  width: 130rpx;
  text-align: center;
}

.down-tab-item-active {
  height: 56rpx;
  line-height: 56rpx;
  color: #ffffff;
  border-radius: 6rpx;
  background-color: #07c160;
}

.lists-box {
  height: calc(100vh - 317.2rpx - 200px);
  background-color: #f2f2f2;
}

.lists {
  margin: 0 20rpx;
  margin-top: 10rpx;
}

.list-item-image {
  display: block;
  width: 122rpx;
  height: 122rpx;
  margin: 10rpx;
}

.to-bottom {
  padding: 30rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

.button {
  width: 330rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

button::after {
  border: none;
}

.ch-button {
  color: #07c160;
  border: 1px solid #07c160;
  background-color: transparent;
}

.canvas {
  position: fixed;
  left: 800rpx;
  top: 0;
}