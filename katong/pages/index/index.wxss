page {
    height: 100%;
    background: url(https://static.yximgs.com/udata/pkg/phenix/346843435436456@2x.png) repeat center;
    background-size: 100%;
}

.wrap {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.content-wrap {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.share-photo {
    width: 100%;
    margin-bottom: 40rpx;
}

.index-video {
    width: 750rpx;
    height: 730rpx;
}

.image-step {
    width: 100%;
    height: 222rpx;
}

.footer-wrap {
    flex: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.image-title {
    width: 408rpx;
    height: 60rpx;
}

.btn-wrap,.btn-wrap-center {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.btn-wrap-center {
    justify-content: center;
}

.open-camera {
    background-image: url(https://static.yximgs.com/udata/pkg/phenix/button_cartoon_photograph@3x.1005350d.png);
}

.open-album {
    background-image: url(https://static.yximgs.com/udata/pkg/phenix/button_cartoon_photoalbum3x.414c2590.png);
}

.play {
    background-image: url(https://mh.bimeijie.top/images/button_cartoon_play@3x.fe37bcbb.png);
}