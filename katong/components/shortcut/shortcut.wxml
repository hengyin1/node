<view class="shortcut">
    <form bindsubmit="_onTargetPage">
        <button class="nav-item btn-normal {{isShow?'show_80':transparent?'':'hide_80'}}" data-index="0" formType="submit">
            <text class="iconfont icon-home"></text>
        </button>
    </form>
    <form bindsubmit="_onTargetPage">
        <button class="nav-item btn-normal {{isShow?'show_60':transparent?'':'hide_60'}}" data-index="1" formType="submit">
            <text class="iconfont icon-cate"></text>
        </button>
    </form>
    <form bindsubmit="_onTargetPage">
        <button class="nav-item btn-normal {{isShow?'show_40':transparent?'':'hide_40'}}" data-index="2" formType="submit">
            <text class="iconfont icon-cart"></text>
        </button>
    </form>
    <form bindsubmit="_onTargetPage">
        <button class="nav-item btn-normal {{isShow?'show_20':transparent?'':'hide_20'}}" data-index="3" formType="submit">
            <text class="iconfont icon-profile"></text>
        </button>
