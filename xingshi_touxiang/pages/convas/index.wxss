.navigationBarMain {
    margin-bottom: 100rpx;
}

.nav-back {
    background-color: rgb(228,191,147);
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    text-align: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    z-index: 9999;
    -webkit-box-align: center;
    align-items: center;
    height: 44px;
}

.navigationBarMain image {
    width: 18rpx;
    height: 34rpx;
    padding: 0 25rpx;
}

