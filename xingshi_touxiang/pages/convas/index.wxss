.toast-content-wrap {
    display: flex;
    position: fixed;
    height: 100%;
    width: 100%;
    justify-content: center;
    align-items: center;
    z-index: 999;
    top: 0;
}

.toast-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: DarkGray;
    background: #fff;
    border-radius: 8px;
    position: absolute;
    padding: 30rpx 30rpx 0;
}

.toast-content-wrap .bg {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.2;
}

.toast-content .content-text {
    padding: 30rpx;
    font-size: 18px;
    border-bottom: 1px solid DarkGray;
}

.toast-content button {
    padding: 40rpx 0 40rpx;
    font-size: 18px;
    line-height: 18px;
    width: 100%;
    color: RoyalBlue;
}

page {
