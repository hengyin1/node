<view class="nav-container sol-class" style="top:0px">
    <view class="label-nav">
        <view bindtap="showAllNav" class="more-bot"></view>
        <scroll-view class="label-scoll" scrollLeft="{{navScrollLeft}}" scrollX="true">
            <view id="nav">
                <view bindtap="onClick" class="label-item {{activeIndex==index?'active':''}}" data-index="{{index}}" wx:for="{{tabs}}" wx:key="index">
                    <view class="inner">
                        <text>{{item.title}}</text>
                        <text class="num">{{item.num}}</text>
                    </view>
                </view>
            </view>
        </scroll-view>
        <view class="drop-nav-list" wx:if="{{showNavDrap}}">
            <view class="drop-title">
                <view>请选择类目</view>
                <view bindtap="showAllNav" class="more-top"></view>
            </view>
            <view class="nav-list-content">
                <view bindtap="onClick" class="nav-item {{activeIndex==index?'active':''}}" data-index="{{index}}" data-pop="{{true}}" wx:for="{{tabs}}" wx:key="index">
					{{item.title}}
					<text>{{item.num}}</text>
                </view>
            </view>
        </view>
        <div bindtap="showAllNav" class="pop-mask" wx:if="{{showNavDrap}}"></div>
    </view>
</view>
